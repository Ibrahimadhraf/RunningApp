<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph.xml"
    app:startDestination="@id/setUpFragments">

    <fragment
        android:id="@+id/runFragments"
        android:name="com.ibrahim.runningapp.ui.fragments.RunFragments"
        android:label="RunFragments" >
        <action
            android:id="@+id/action_runFragments_to_trackingFragment"
            app:destination="@id/trackingFragment" />
    </fragment>
    <fragment
        android:id="@+id/setUpFragments"
        android:name="com.ibrahim.runningapp.ui.fragments.SetUpFragments"
        android:label="SetUpFragments" >
        <action
            android:id="@+id/action_setUpFragments_to_runFragments"
            app:destination="@id/runFragments" />
    </fragment>
    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.ibrahim.runningapp.ui.fragments.StatisticFragment"
        android:label="StatisticFragment" />
    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.ibrahim.runningapp.ui.fragments.TrackingFragment"
        android:label="TrackingFragment" >
        <action
            android:id="@+id/action_trackingFragment_to_runFragments"
            app:destination="@id/runFragments" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ibrahim.runningapp.ui.fragments.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>